<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/record"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/record_sensor_button_height"
    android:layout_marginBottom="16dp"
    android:layout_above="@+id/action_area"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    app:cardCornerRadius="@dimen/record_sensor_button_radius"
    android:contentDescription="@string/btn_stop_description"
    >
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:layout_gravity="center"
      android:gravity="center"
      android:orientation="horizontal">
    <ImageView
        android:id="@+id/record_button_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_recording_stop_42dp"
        />
    <TextView
        android:id="@+id/record_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/btn_stop_label"
        />
  </LinearLayout>
</androidx.cardview.widget.CardView>
